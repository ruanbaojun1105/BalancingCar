<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <com.hwx.balancingcar.balancingcar.view.SteeringWheelView
            android:id="@+id/steeringWheelView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|start"
            android:layout_weight="2"
            app:arrowBg="@drawable/rocker_base"
            app:ballColor="@color/blue_ael2"
            />
        <com.hwx.balancingcar.balancingcar.view.DialChart02View
            android:id="@+id/dial"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />

    </LinearLayout>

</LinearLayout>
