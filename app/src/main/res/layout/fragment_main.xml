<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="30dp"
    >

    <com.hwx.balancingcar.balancingcar.view.DialChart03View
        android:id="@+id/circle_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="3"
        android:layout_margin="5dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:gravity="center"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center"
            >

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/this_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/updateData"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/updateData"
                android:gravity="bottom|center"
                android:paddingLeft="10dp"
                android:text="{fa-lemon-o @color/colormain3 24sp} 当次里程 (km)"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/this_tag_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/updateData"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/updateData"
                android:gravity="bottom|center"
                android:paddingLeft="10dp"
                android:text="0"
                android:textColor="@color/colormain3"
                android:textSize="25sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center"
            >

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/all_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/updateData"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/updateData"
                android:gravity="bottom|center"
                android:paddingLeft="10dp"
                android:text="{fa-lemon-o @color/colormain2 26sp}总里程 (km)"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/all_tag_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/updateData"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/updateData"
                android:gravity="bottom|center"
                android:paddingLeft="10dp"
                android:text="0"
                android:textColor="@color/colormain2"
                android:textSize="25sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center"
            >

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/temperature_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/updateData"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/updateData"
                android:gravity="bottom|center"
                android:paddingLeft="10dp"
                android:text="{fa-fire @color/blue_ael2 25sp} 温度 (℃)"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/temperature_tag_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/updateData"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/updateData"
                android:gravity="bottom|center"
                android:paddingLeft="10dp"
                android:text="0"
                android:textColor="@color/blue_ael2"
                android:textSize="25sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center"
            >

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/current_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/updateData"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/updateData"
                android:gravity="bottom|center"
                android:paddingLeft="10dp"
                android:text="{fa-sliders @color/blue_ael2 25sp} 电流 (A)"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/current_tag_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/updateData"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/updateData"
                android:gravity="bottom|center"
                android:paddingLeft="10dp"
                android:text="0"
                android:textColor="@color/blue_ael2"
                android:textSize="25sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center"
            >

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/electricity_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom|center"
                android:paddingLeft="10dp"
                android:text="{fa-battery-three-quarters @color/blue_ael2 25sp} 电量  "
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/electricity_tag_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom|center"
                android:paddingLeft="10dp"
                android:text="0"
                android:textColor="@color/blue_ael2"
                android:textSize="25sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="horizontal">
        <com.hwx.balancingcar.balancingcar.view.StateButton
            android:id="@+id/star_stop_light"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:text="{fa-lightbulb-o @color/orange_light 25sp}  开关灯"
            android:layout_weight="1"
            app:radius="5dp"
            app:normalBackgroundColor="@color/blue_ael"
            app:normalTextColor="@color/white"
            app:pressedBackgroundColor="@color/gray"
            app:pressedTextColor="@android:color/black"
            app:unableBackgroundColor="@color/colorPrimary"
            app:unableTextColor="@color/white"/>
        <com.hwx.balancingcar.balancingcar.view.StateButton
            android:id="@+id/star_stop_device"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:text="{fa-power-off @color/red_ael2 25sp}  开关机"
            android:layout_weight="1"
            app:radius="5dp"
            app:normalBackgroundColor="@color/blue_ael"
            app:normalTextColor="@color/white"
            app:pressedBackgroundColor="@color/gray"
            app:pressedTextColor="@android:color/black"
            app:unableBackgroundColor="@color/colorPrimary"
            app:unableTextColor="@color/white"/>
        <com.hwx.balancingcar.balancingcar.view.StateButton
            android:id="@+id/star_stop_control"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:text="{fa-slideshare @color/red_ael2 25sp}  控制"
            android:layout_weight="1"
            app:radius="5dp"
            app:normalBackgroundColor="@color/blue_ael"
            app:normalTextColor="@color/white"
            app:pressedBackgroundColor="@color/gray"
            app:pressedTextColor="@android:color/black"
            app:unableBackgroundColor="@color/colorPrimary"
            app:unableTextColor="@color/white"/>
    </LinearLayout>
</LinearLayout>
