<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/BaseToolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:title="设置"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:titleTextAppearance="@style/ToolbarTextAppearance" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <ImageView
                android:id="@+id/image_set"
                android:layout_width="match_parent"
                android:layout_height="255dp"
                android:src="@drawable/pingheng"
                android:scaleType="fitCenter"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/light_gray"
                android:alpha="0.9"
                android:layout_margin="10dp"
                >

                <com.joanzapata.iconify.widget.IconTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="{fa-plane spin} 最大速度设置 (km/h)  "
                    android:textColor="@color/gray"
                    android:padding="10dp"/>
                <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:dsb_min="2"
                    app:dsb_max="15"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/light_gray"
                android:alpha="0.9"
                android:layout_margin="10dp"
                >

                <com.joanzapata.iconify.widget.IconTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="{fa-database spin} 车辆动力强度设置"
                    android:textColor="@color/gray"
                    android:padding="10dp"/>
                <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:dsb_min="2"
                    app:dsb_max="15"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/light_gray"
                android:alpha="0.9"
                android:layout_margin="10dp"
                >

                <com.joanzapata.iconify.widget.IconTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="{fa-dashboard spin} 转向灵敏度设置"
                    android:textColor="@color/gray"
                    android:padding="10dp"/>
                <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:dsb_min="2"
                    app:dsb_max="15"
                    />
            </LinearLayout>
            <com.joanzapata.iconify.widget.IconTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_gray"
                android:alpha="0.9"
                android:layout_margin="10dp"
                android:text="{fa-compass spin} 行驶轨迹"
                android:textColor="@color/gray"
                android:padding="10dp"/>
            <com.joanzapata.iconify.widget.IconTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_gray"
                android:alpha="0.9"
                android:layout_margin="10dp"
                android:text="{fa-circle-o-notch spin} 定时关机"
                android:textColor="@color/gray"
                android:padding="10dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>